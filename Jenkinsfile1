pipeline {
    agent any
    tools { 
        maven 'maven' 
    }
    stages
    {
    
    
    

        
        stage ('Build & JUnit Test') {
            steps {
                sh 'mvn clean package' 
            }
        }
        stage ('Docker Build') {
            steps {
            
                    
                    sh 'docker build -t sourabh0806/insure-me .'
                    sh "docker login -u ${username} -p ${password} "
                    sh 'docker push sourabh0806/insure-me'
                    
                    
                
            }
        }
         
    }
}

